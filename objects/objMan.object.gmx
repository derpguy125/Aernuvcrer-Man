          <argument>
            <kind>1</kind>
            <string>///Main Movement

//Movement
if ground == true
{
    if keyboard_check(vk_right)
    {    
        if initStep == true
        {
            initStep = false;
            isStep = true;
            dir = 1;
        }
        else if isStep == false
        {
            hsp = walkSpeed;
            sprite_index = spriteWalk;
            image_speed = 0.15;
            dir = 1;
        }
    }
    else if keyboard_check(vk_left)
    {    
        if initStep == true
        {
            initStep = false;
            isStep = true;
            dir = -1;
        }
        else if isStep == false
        {
            hsp = -walkSpeed;
            sprite_index = spriteWalk;
            image_speed = 0.15;
            dir = -1;
        }
    }
    else if isStep == false
    {
        stepTimer = 0;
        hsp = 0;
        sprite_index = spriteStand;
        initStep = true;
    }
    
    
    //Sidestepping
    if isStep == true
    {
        hsp = dir * stepSpeed;
        sprite_index = spriteStep;
        
        stepTimer += 1;
        if stepTimer &gt;= stepFrames
        {
            stepTimer = 0;
            isStep = false;
        }
    }
}
else
{
    sprite_index = spriteJump;
    initStep = false;
    stepTimer = 0;
    isStep = false;
    
    if keyboard_check(vk_right)
    {
        hsp = walkSpeed;
        dir = 1;
    }
    else if keyboard_check(vk_left)
    {
        hsp = -walkSpeed;
        dir = -1;
    }
    else
    {
        hsp = 0;
    }
}



//Gravity
if ground == true
{
    curGrav = 0
    canMinJump = true;
}
else
{
    curGrav = grav
    if vsp &gt; maxVspeed
        vsp = maxVspeed;
}


//Jumping
if ground == true &amp;&amp; keyboard_check_pressed(ord('Z'))
{
    vsp = -jumpSpeed;
    sprite_index = spriteJump;
    ground = false;
}


//Minjumping
if ground == false &amp;&amp; vsp &lt; 0 &amp;&amp; canMinJump == true &amp;&amp; !keyboard_check(ord('Z'))
{
    canMinJump = false;
    vsp = 0;
}

vsp += curGrav;

//Shooting
if keyboard_check_pressed(ord('X')) &amp;&amp; instance_number(objMegamanBullet) &lt; 124
{
    var box, ID;
    if dir == -1
        box = bbox_left;
    else
        box = bbox_right;
        
    ID = instance_create(box+dir*16, y+-8, objMegamanBullet);
        ID.hspeed = dir * 5;
    isShoot = true;
    alarm[0] = 20;
}


//Normal/shooting sprites
if isShoot == false
{
    spriteStand = sprManStand;
    spriteStep = sprManStep;
    spriteJump = sprManJump;
    spriteWalk = sprManWalk;
}
else
{
    spriteStand = sprManStandShoot;
    spriteStep = sprManStandShoot;
    spriteJump = sprManJumpShoot;
    spriteWalk = sprManWalkShoot;
}
</string>
